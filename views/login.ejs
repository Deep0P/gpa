<!doctype html>
<html lang="en">
    
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <link rel="stylesheet" href="/css/style.css">
    <title>Login page</title>
</head>

<body> 

    <div class="container card w-25 mt-5">
        <% if(messages.error) {%> 
            <small style="color:red"><%= messages.error %> </small>
        <% } %> 
        <% if(messages.success) {%> 
            <small style="color: green;" ><%= messages.success %> </small>
        <% } %>
        <form id="post-form">

            <!-- Email input -->
            <div class="form-outline mb-2">
                <label class="form-label" for="form1Example1">Email address</label>
                <input type="email" id="email" class="form-control" value="<%= messages.email %>" />
            </div>

            <!-- Images to creat password -->
            <div class="form-group">
                <label for="password">Password:</label>
                <br><br>

                
                <% gridOfRandomImages.forEach(function(row){ %>
                    <div class="row no-gutters">
            
                    <% row.forEach(function(col){ %>
                        <div class="col-2 no-gutters">
                            <div id="<%= `${col[Object.keys(col)[0]]}_num` %>" class="hide"></div>
                            <img src='/img/<%= Object.keys(col)[0] %>.svg' alt="img" style="
                                height: 50px;
                                width: 50px;" 
                                id="<%= col[Object.keys(col)[0]] %>"
                                onclick="onSelectImage('<%= col[Object.keys(col)[0]] %>')" >
                        </div>
                   <% }) %>
                </div>
                <div style="padding-bottom: 15px;"></div>
               <% }) %>

               <div class="visiblock">
                <div class="line"></div>
                <img src='/img/eyeOpen.png' alt="eye" class="visibility" onClick="onVisibility()">
                <img src='/img/eyeClosed.png' alt="eye" class="visibility1 hidden" onClick="onVisibility()">
                <div class="line"></div>
               </div>


              <div class="container mb4 mb-4">
                <div class="radio-toolbar d-flex">
                    <div hidden>
                        <input type="radio" id="noBucket" name="radios" value="<%= noBucket %>" checked>
                    </div>
                    <div class="mx-3">
                        <input type="radio" id="bucketA" name="radios" value="<%= bucketA %>">
                        <label for="bucketA">A</label>
                    </div>
                    <div class="mx-3">
                        <input type="radio" id="bucketB" name="radios" value="<%= bucketB %>">
                        <label for="bucketB">B</label>
                    </div>
                    <div class="mx-3">
                        <input type="radio" id="bucketC" name="radios" value="<%= bucketC %>">
                        <label for="bucketC">C</label>
                    </div>
                  </div>
              </div>
              <!-- https://stackoverflow.com/questions/4641752/css-how-to-style-a-selected-radio-buttons-label -->
<div class="foot">
              <input type="text" name="formType" value="login" hidden>
              <div class="reset"><small><a href="/resetpassword">Reset Password</a></small></div> 
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mt-2">Sign in</button>
        </div>
                <div >
                    <small> Don't have an account?<a href="/signup">Register </a></small>
                </div>
            </div>
        </form>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

    <script src="/js/home.js"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
