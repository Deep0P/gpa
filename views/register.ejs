<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        .div-btn{
            height: 25px;
            width: 25px;
            border-radius: 100px;
        }
        #gold{
            background-color: gold;
        }
        #red{
            background-color: red;
        }
        #blue{
            background-color: blue;
        }
        #green{
            background-color: green;
        }
    </style>    

    <title>Register page</title>
</head>

<body>

    <div class="container w-25 mt-5">

        <form id="post-form">

            <!-- Name input -->
            <div class="form-outline mb-4">
                <input type="text" id="name" class="form-control" />
                <label class="form-label" for="form1Example2">Name</label>
            </div>

            <!-- Email input -->
            <div class="form-outline mb-4">
                <input type="email" id="email" class="form-control" />
                <label class="form-label" for="form1Example1">Email address</label>
            </div>

            <!-- Images to creat password -->
            <div class="form-group">
                <label for="password">Password:</label>
                <br>
                <br>
                
                <% gridOfRandomImages.forEach(function(row){ %>
                    <div class="row no-gutters">
            
                    <% row.forEach(function(col){ %>
                        <div class="col-2 no-gutters">
                            <img src='/img/<%= col %>.svg' alt="img" style="
                                height: 50px;
                                width: 50px;" 
                                id="<%= col %>"
                                onclick="onSelect('<%= col %>')" >
                        </div>
                   <% }) %>
                </div>
                <div style="padding-bottom: 15px;"></div>
               <% }) %>
               
              <div class="container mb-4">
                <div class="row">
                  <div class="col div-btn" id="gold">
                    A
                  </div>
                  <div class="col div-btn" id="red">
                    B
                  </div>
                  <div class="col div-btn" id="blue">
                    C
                  </div>
                  <div class="col div-btn" id="green">
                    D
                  </div>
                </div>
              </div>
               
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block">Sign in</button>
        </form>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

    <script src="/js/home.js"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
